{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "allowedCommands" : [
    "go mod tidy"
  ],
  "allowedPostUpgradeCommands" : [
    "go mod tidy"
  ],
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "updateTypes": ["patch"],
      "enabled": false
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "go mod tidy"
    ],
    "fileFilters": ["go.mod", "go.sum"],
    "executionMode": "update"
  }
}
